[core]
	excludesfile = ~/.config/git/ignore
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[include]
	path = ~/.local/git/config
[merge]
	ff = only
[pull]
	rebase = true
[status]
	showUntrackedFiles = all
